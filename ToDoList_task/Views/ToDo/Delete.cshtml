@model Repositories.Items.ToDo


<h2>Are you sure you want to delete this?</h2>
<table class="table">
    <tr>
            <td>@Model.Text</td>
            <td>@Model.Description</td>
            <td>@Model.CategoryId</td>
            <td>@Model.Deadline</td>
            <td> 
                @(Model.IsComplete ? "Complete" : "Not complete")
            </td>
    </tr>
</table>

<form asp-controller="ToDo" asp-action="Delete" method="post">
                <input type="submit" value="Delete" />
</form>
<a asp-controller="ToDo" asp-action="Index">Cancel</a>
